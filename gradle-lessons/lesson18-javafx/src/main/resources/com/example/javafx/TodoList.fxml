<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx.TodoListController"
      alignment="CENTER" 
      spacing="15.0"
      styleClass="container">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
   <Label text="My Todo List" styleClass="title-label"/>
   
   <HBox spacing="10.0" alignment="CENTER">
      <TextField fx:id="inputField" 
                 promptText="Enter a new task..."
                 prefWidth="300.0"
                 onAction="#handleAddTodo"/>
      <Button fx:id="addButton" 
              text="Add" 
              onAction="#handleAddTodo"
              styleClass="primary-button"/>
   </HBox>
   
   <ListView fx:id="todoListView" prefHeight="300.0"/>
   
   <HBox spacing="10.0" alignment="CENTER">
      <Button fx:id="deleteButton" 
              text="Delete Selected" 
              onAction="#handleDeleteSelected"
              styleClass="danger-button"/>
      <Button fx:id="clearButton" 
              text="Clear All" 
              onAction="#handleClearAll"
              styleClass="secondary-button"/>
   </HBox>
</VBox>
